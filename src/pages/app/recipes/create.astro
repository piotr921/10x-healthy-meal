---
import AppLayout from "@/layouts/AppLayout.astro";
import RecipeForm from "@/components/my-recipes/RecipeForm";
---

<AppLayout title="Create Recipe - My Recipes">
  <div class="container mx-auto py-8 px-4 max-w-3xl">
    <div class="mb-8">
      <a
        href="/app/recipes"
        class="inline-flex items-center text-sm text-muted-foreground hover:text-primary transition-colors mb-4"
      >
        ‚Üê Back to Recipes
      </a>
      <h1 class="text-3xl font-bold">Create New Recipe</h1>
      <p class="text-muted-foreground mt-2">Add a new recipe to your collection</p>
    </div>
    <RecipeForm client:load />
  </div>
</AppLayout>

