---
import type { RecipeDTO } from "@/types";

interface Props {
  recipe: RecipeDTO;
}

const { recipe } = Astro.props;
---

<a href={`/app/recipes/${recipe.id}`} class="block p-4 border rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
  <h3 class="text-xl font-semibold mb-2">{recipe.title}</h3>
  <p class="text-gray-600 dark:text-gray-400 line-clamp-3">{recipe.content}</p>
  <p class="text-sm text-gray-500 mt-4">Last updated: {new Date(recipe.updated_at).toLocaleDateString()}</p>
</a>

